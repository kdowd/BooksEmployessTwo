<Window x:Class="BooksEmployess.Windows.ShowBook"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BooksEmployess.Windows"
        mc:Ignorable="d"
        ScrollViewer.VerticalScrollBarVisibility="Visible"
        Title="ShowBook" Height="500" Width="300" Loaded="OnLoaded">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Padding" Value="10 0" />
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <ScrollViewer VerticalScrollBarVisibility="Auto" >
            <StackPanel x:Name="MyStackPanel">

                <TextBlock x:Name="title" Text="" Background="Black" Padding="10" Foreground="White" />
                <Separator Width="100" Height="20" />
                <Image x:Name="poster" Width="300" Height="300" Source="https://placehold.co/300x400/?text=Alice's+Adventures+in+Wonderland/png/" />
                <TextBlock x:Name="description" Text=""/>
                <TextBlock x:Name="author" Text="" />
                <TextBlock x:Name="pages" Text="" />
                <TextBlock x:Name="year" Text="" />
            </StackPanel>
        </ScrollViewer>


    </Grid>
</Window>
